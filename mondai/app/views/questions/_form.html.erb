<%= form_with model: @question do |f| %>
    <% if @question.errors.any? %>
      <div>
        <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div>
    <div>
      <h4>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </h4>
    </div>
    <div>
      <h4>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </h4>
    </div>
    <div>
      <h4>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </h4>
    </div>
  </div>
  <%= f.submit "送信", disable_with: '送信中...' %>
<% end %>